pipeline{
    agent none
    stages{
        stage ('parallel build') {
            parallel{
                stage ('biuld-1'){
                    agent{label 'node1'}
                    steps{
                        echo "this is parallel build-01"
                    }
                }
                stage ('biuld-2'){
                    agent{label 'node2'}
                    steps{
                        echo "this is parallel build-2"
                    }
                }
            }

        }
        stage ('parallel deploy'){
            parallel{
                stage ('test-1'){
                    steps{
                        echo "this is parallel deploy-1"
                    }
                }
                stage ('test-2'){
                    steps{
                        echo "this is parallel deploy-2"
                    }
                }
            }
        }
        stage ('test parallel'){
            parallel{
                stage ('test-1'){
                    steps{
                        echo "this is test-1 parallel"
                    }
                }
                 stage ('test-2'){
                    steps{
                        echo "this is test-2 parallel"
                    }
                }
            }
        }
    }
}
